@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if(Model.Count == 0)
{
    <text>No movies available</text>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Movie Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.Name, "Detail", "Movies", new {Id = movie.Id}, null)</td> @* null forces compiler to use inline object as the route parameters*@
                </tr>
            }
        </tbody>
    </table>
}
       
       
