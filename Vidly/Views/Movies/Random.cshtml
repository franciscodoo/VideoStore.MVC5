@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customers.Count > 1 ? "popular" : null;
}

<h2>A Wild Movie Appears!</h2>

<p class = "@className"> @*Dynamically define the css class. If className is null, nothing is written*@
    @Model.Movie.Name
</p>

@if (Model.Customers.Count == 0)
{
    <text> No one has rented this movie. </text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}