@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <text>No customers yet...</text>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customer Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@customer.Name, "Detail", "Customers", new { Id = customer.Id }, null)</td> @* null forces compiler to use inline object as the route parameters*@
                </tr>
            }
        </tbody>
    </table>
}

